<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.Chat"
    android:background="#FEF6AD">
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7FEE1">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:paddingStart="12sp"
        android:paddingEnd="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_user"
        android:layout_toEndOf="@+id/backBtn"/>
<ImageView
android:id="@+id/backBtn"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:paddingStart="12sp"
    android:paddingEnd="2dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="40dp"
    android:src="@drawable/ic_back">
</ImageView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toEndOf="@+id/profilePic"
    >
     <TextView
     android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="User name"
         android:layout_marginStart="10dp"
    android:layout_marginTop="40dp"
    android:maxLines="1"
    android:textColor="@color/theme_color_8"
    android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_color"
        android:text="online"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
</LinearLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/topBar"
        android:layout_height="match_parent"
        android:id="@+id/chattingRecyclerView"
        android:layout_above="@+id/bottomBar"/>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F7FEE1"
        android:paddingTop="10dp">
        <EditText
            android:id="@+id/messageEditTxt"
            android:layout_toStartOf="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/theme_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:hint="Type something..."
            android:textColorHint="@color/theme_color_8"/>
        <ImageView
            android:id="@+id/sendBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_send"/>
    </RelativeLayout>
</RelativeLayout>