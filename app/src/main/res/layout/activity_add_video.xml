<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVideo"
    android:background="@color/theme_color">
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/addVideo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Add video"
            android:textColor="@color/theme_color"/>
        <Button
            android:id="@+id/lentaVideo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Home"
            android:textColor="@color/theme_color_8"/>
        <Button
            android:id="@+id/mess"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Messages"
            android:textColor="@color/theme_color_8"/>
        <Button
            android:id="@+id/plan"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Plan"
            android:textColor="@color/theme_color_8"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FEF6AD"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:background="#CBCED5"
            android:src="@drawable/ic_video" />

        <EditText
            android:id="@+id/nameVid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="Name video..."
            android:maxLines="50" />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="Url image..."
            android:maxLines="50" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Main ingredients:"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/milk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milk"

                    />

                <CheckBox
                    android:id="@+id/cream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sour cream" />

                <CheckBox
                    android:id="@+id/yogurt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yogurt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/meat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meat" />

                <CheckBox
                    android:id="@+id/cheese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheese" />

                <CheckBox
                    android:id="@+id/egg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Egg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/veget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetables" />

                <CheckBox
                    android:id="@+id/fruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fruits" />

                <CheckBox
                    android:id="@+id/berrie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berries" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Cooking method:"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/oven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oven" />

                <RadioButton
                    android:id="@+id/micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Microwave" />

                <RadioButton
                    android:id="@+id/unbaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Without baking" />
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/publish"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/vid"
        android:layout_centerHorizontal="true"
        android:text="Publish"
        android:textColor="@color/theme_color_8" />
</RelativeLayout>